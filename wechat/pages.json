	"leftWindow": {
		"path": "pages/home/index.vue",
		"style": {
			"height": "100%"
		},
		"matchMedia": {
			"minWidth": 768
		}
	},
	"rightWindow": {
		"path": "pages/pc/right.vue",
		"style": {
			"width": "calc(100vw - 450px)",
