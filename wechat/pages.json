				"style": {
					"navigationBarTitleText": "更多功能1",
					"enablePullDownRefresh": false
				}
			}]
		}, {
			"root": "p_common",
			"pages": [{
				"path": "article/article",
				"style": {
					"navigationBarTitleText": "",
					"enablePullDownRefresh": false
				}
			}]
		}
	],
	"tabBar": {
		"color": "#D09966",
		"selectedColor": "#4C2907",
		"list": [{
			"pagePath": "pages/home/index",
			"text": "首页",
			"iconPath": "static/images/icon/tabbar/home.png",
			"selectedIconPath": "static/images/icon/tabbar/home-active.png"
		}, {
			"pagePath": "pages/personal/index",
			"text": "我的",
			"iconPath": "static/images/icon/tabbar/personal.png",
			"selectedIconPath": "static/images/icon/tabbar/personal-active.png"
		}]
	},
